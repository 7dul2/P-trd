<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ptrd"
        android:label="P-trd"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ptrd"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ptrd"
        tools:targetApi="31">
        <receiver
            android:name="com.example.ptrd.ScanWidgetProvider"
            android:exported="true"
            android:label="P-trd">
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_scan_resource" />
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".search"
            android:exported="false" />
        <activity
            android:name=".rank"
            android:exported="false" />
        <activity
            android:name=".item"
            android:configChanges="fontScale|screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false" />
        <activity
            android:name=".index"
            android:configChanges="fontScale|screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:configChanges="fontScale|screenSize|smallestScreenSize|screenLayout|orientation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>